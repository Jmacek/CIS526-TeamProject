include mixins

doctype html
html
  head
    title= title
    script.
      localStorage.username = '#{username}';
      localStorage.isAdmin = '#{isAdmin}';

    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- Bootswatch Theme
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='/javascripts/jquery.min.js' )
    script( src='/bootstrap/js/bootstrap.min.js' )
    block scripts



  body

    +nav("Typing War", "dropdown_menu")
      +nav_item("/", "active") Home
      +nav_item("scoreboard", "active") Scoreboard
      +nav_item("challenge", "active") New Game
      -if(username == "Guest"){
        +nav_item("login", "") Login
        +nav_item("register", "") Sign Up
      -  }
      - else{
        +nav_item_dropdown("#")( label = "" + username )
          //add more user items here
          +nav_item("logout", "") Logout
      - }

    block content
